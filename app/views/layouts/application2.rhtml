<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
	<title>ABTT - <%= @title %></title>
	<link href="/main.css" rel="stylesheet" type="text/css" />
	<%
		def better_select_date(startdate, object, field)
		    return select_year(startdate, :prefix => "#{object}[#{field}(1i)]", :discard_type => true) + 
		           select_month(startdate, :prefix => "#{object}[#{field}(2i)]", :discard_type => true) + 
		           select_day(startdate, :prefix => "#{object}[#{field}(3i)]", :discard_type => true)
		end
	%>
<%= javascript_include_tag :defaults %>
</head>
<body>
  <div class="header"><%= '<div style="float: left; font-size: 20pt; background-color: black; color: red;">DEVELOPMENT <br />ENVIRONMENT</div>' if ENV["RAILS_ENV"] == 'development'-%><%= link_to "<img src=\"/images/header.png\" style=\"border: 0 solid black;\" />", "/" %></div>
  <div class="login">
	<% if logged_in?() %>
		<b><%= current_member().fullname %></b> (<%= current_member().kerbid() %>)<br/>
		<%= link_to("Profile", :action => "edit_self", :controller => "members") %>&nbsp;&nbsp;<%= link_to("Logout", :action => "logout", :controller => "useraccount") %>
	<% else %>
		<br/>(not logged in)
	<% end %>
</div>

<% if logged_in?() %>
	<div id="menu">
		<%= conditional_link_to("Events", "events", "index") %>
		<%= conditional_link_to("Email", "emails", "index") %>
		<%= conditional_link_to("Calendar", "events", "calendar") %>
		<%= conditional_link_to("Finance", "accounts", "list") %>
		<%= conditional_link_to("Phone List", "members", "index") %>
		<% if iphone_user_agent? %>
		  <%= conditional_link_to("iPhone View", "events", "iphone") %>
		<% end %>
		<%= conditional_link_to('Timecards', 'timecard_entries', 'index') %>
		<% admin = current_member.authorized? ["organizations/index", "equipment/tree", "roles", "permissions/index"] %>
      <%  if admin %> 
        <%= link_to_function("Tracker Admin", nil, :id => "more_link") do |page|
        page.visual_effect(:toggle_blind, "submenu", :duration => 0.1) 
            end %>
      <% end %>
	</div>
      <% if admin %>
        <div id="submenu" style="display: none;">
              <%= conditional_link_to("Email Queues", "email_queues", "index") %>
              <%= conditional_link_to("Organizations", "organizations", "index") %>
              <%= conditional_link_to "Locations", "locations", "index" %>
              <%= conditional_link_to("Equipment", "equipment", "tree" ) %>
              <%= conditional_link_to("Roles", "roles", "index" ) %>
              <%= conditional_link_to("Permissions", "permissions", "index" ) %>
              <%= conditional_link_to("Attachments", "attachments", "index" ) %>
							<%= conditional_link_to('Timecards', 'timecards', 'index') %>
          </div>
        <% end %>
<% end %>

<% if flash[:notice] %><div class="notice"><%= flash[:notice] %></div><% end %>
<% if flash[:error] %> <div class="error"> <%= flash[:error] %> </div><% end %>


<%# the event controller is special %>
<% unless controller.controller_name == 'events' %>
<div id="container">
  <%= yield %>
</div>
<%- else -%>
<%= yield %>
<%- end -%>
</body>
</html>
